<Window x:Class="Capitulo_6_7.Capitulo_7.Program_5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo_6_7.Capitulo_7"
        mc:Ignorable="d"
        Title="Program_5" Height="400" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">

            <StackPanel Orientation="Horizontal">
                <Label Content="Telofono"></Label>
                <TextBox x:Name="telefonoTextBox" Height="18" Width="150"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Nombre"></Label>
                <TextBox x:Name="nombretextBox" Height="18" Width="150" Margin="2,0"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Content=" Guardar " x:Name="guardarButton" Margin="0,10,0,0" Click="guardarButton_Click"></Button>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left">
               <ListView  x:Name="pantalla_2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,10,0,10" Height="200" Width="400"></ListView>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
